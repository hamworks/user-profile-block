{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {},
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
